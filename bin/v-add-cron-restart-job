#!/bin/bash
# info: add cron reports
# options: NONE
#
# This function for enabling restart cron tasks

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/lokahost/lokahost.conf
source /etc/lokahost/lokahost.conf
# shellcheck source=/usr/local/lokahost/func/main.sh
source $LOKAHOST/func/main.sh
# load config file
source_conf "$LOKAHOST/conf/lokahost.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

is_system_enabled "$CRON_SYSTEM" 'CRON_SYSTEM'

# Perform verification if read-only mode is enabled
check_lokahost_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Add cron job
cmd="v-update-sys-queue restart"
check_cron=$(grep "$cmd" "/var/spool/cron/crontabs/lokahostweb" 2> /dev/null)
if [ -z "$check_cron" ] && [ -n "$CRON_SYSTEM" ]; then
	echo "*/2 * * * * sudo /usr/local/lokahost/bin/v-update-sys-queue restart" >> "/var/spool/cron/crontabs/lokahostweb"
fi

#----------------------------------------------------------#
#                       Lokahost                             #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
